{% extends 'security.html.twig' %}

{% block body %}
    <form action="{{ path('plejeune_user_login') }}" method="post">
        <div class="box login">
            <div class="header">
                <h1 class="title">
                    <i class="fas fa-sign-in-alt" aria-hidden="true"></i> {% block title %}{{ 'login'|trans({}, 'PLejeuneUser') }}{% endblock %}
                </h1>
            </div>
            <div class="body">
                {% if error %}
                    <div class="callout alert">
                        {% if "error." in error.messageKey %}
                            {{ error.messageKey|trans({}, 'PLejeuneUser') }}
                        {% else %}
                            {{ error.messageKey }}
                        {% endif %}
                    </div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <label>
                    {{ 'username'|trans({}, 'PLejeuneUser') }}
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                </label>

                <label>
                    {{ 'password'|trans({}, 'PLejeuneUser') }}
                    <input type="password" id="password" name="_password" class="form-control"/>
                </label>

                <label>

                    <input type="checkbox" id="remember_me" name="_remember_me" />
                    <label for="remember_me">{{ 'remember_me'|trans({}, 'PLejeuneUser') }}</label>
                </label>
            </div>
            <div class="footer">
                <div class="grid grid-x grid-padding-x">
                    <div class="cell medium-6">
                        <button type="submit" class="button success">
                            <i class="fa fa-lock" aria-hidden="true"></i> {{ 'action.login'|trans({}, 'PLejeuneUser') }}
                        </button>
                    </div>
                    <div class="cell medium-6 text-right">
                        <small>
                            <a href="{{ path('plejeune_user_password_reset_request') }}">
                                {{ 'forgotten_password'|trans({}, 'PLejeuneUser') }}
                            </a>
                            <br/>
                            <a href="{{ path('plejeune_user_registration') }}">
                                {{ 'registration'|trans({}, 'PLejeuneUser') }}
                            </a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}